<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="40dp"

    android:layout_height="wrap_content"
    android:paddingBottom="40dp">

    <TextView
        android:id="@+id/textviewas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Are you sure you want to check in ?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewas"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <info.hoang8f.widget.FButton

            android:id="@+id/Acceptance"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:gravity="center"

            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="#fff"
            fbutton:buttonColor="@color/colorPrimary"
            fbutton:cornerRadius="8dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/Rejection"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:textAllCaps="false"
            android:gravity="center"
            fbutton:cornerRadius="8dp"

            android:text="No"
            android:textColor="#fff"
            fbutton:buttonColor="@color/colorPrimary" />

    </LinearLayout>
</RelativeLayout>