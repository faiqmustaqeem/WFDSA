<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/labelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/invoicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/labelname"
        android:text="Invoice Name"
        android:textSize="14sp"
        />




    <TextView
        android:id="@+id/labelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelname"
        android:text="Price:  "
        android:textSize="14sp"
        />

    <TextView

        android:id="@+id/incvoiceprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelname"
        android:layout_toRightOf="@+id/labelPrice"
        android:text="Invoice Price"
        android:textSize="14sp"
         />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/incvoiceprice"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        >

    </View>
</RelativeLayout>